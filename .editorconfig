# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Configuração para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Arquivos TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# Arquivos JSON
[*.json]
indent_size = 2

# Arquivos YAML
[*.{yml,yaml}]
indent_size = 2

# Arquivos Markdown
[*.md]
trim_trailing_whitespace = false
